---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import IconLink from "../components/IconLink.astro";

// Icons
import LinkedIn from "../components/icons/LinkedIn.astro";
import GitHub from "../components/icons/GitHub.astro";
---

<Layout title="Welcome to Astro.">
	<main>
		<section class="w-full lg:w-[740px] mx-auto py-44">
			<h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-4">
				Hola, soy Samuel Vargas 
			</h1>
			<h2 class="opacity-80 text-2xl text-wrap">
				Desarrollador en Flutter con 1 año de experiencia. De Bogotá,
				Colombia. En busca de alcanzar siempre nuevos horizontes.
			</h2>

			<!-- Contact info -->
			 <ul class="py-6">
				<!-- GitHub -->
				<li><IconLink href="https://github.com/Sjvc0595" icon={GitHub} label="GitHub" /></li>
				<!-- Linkedin -->
				<li><IconLink href="https://www.linkedin.com/in/sjvc0595" icon={LinkedIn} label="LinkedIn" /></li>
			 </ul>
		</section>
	</main>
</Layout>
