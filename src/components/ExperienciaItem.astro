---


interface Props {
  title: string
  company: string
  description: string
  link?: string
  date: string
}

const { title, company, description, link, date } = Astro.props
---


<div
  class="relative mx-4 sm:mx-8 pb-12 grid gap-6 before:absolute before:left-[6px] before:block before:h-full before:border-l before:border-black/10 before:content-[''] dark:before:border-white/10 md:grid-cols-5 md:gap-10 md:space-x-6"
>
  <div class="relative pb-6 md:col-span-2">
    <div class="sticky top-4 space-y-1">
      <span class="absolute -left-[19px] top-1 grid h-3 w-3 place-items-center rounded-full bg-gradient-to-r from-yellow-400 to-amber-300 ring-4 ring-white dark:ring-neutral-900">
        <span class="h-1.5 w-1.5 rounded-full bg-yellow-900/50 dark:bg-yellow-200/70"></span>
      </span>

      <h3 class="text-xl font-bold text-yellow-500 dark:text-yellow-300" data-i18n-title>{title}</h3>
      <h4 class="font-semibold text-lg text-gray-700 dark:text-white" data-i18n-company>{company}</h4>
      <time class="text-sm text-gray-600/80 dark:text-white/80" data-i18n-date>{date}</time>
    </div>
  </div>
  <div class="relative flex flex-col gap-3 rounded-2xl border border-white/40 bg-white/70 px-4 py-4 text-gray-700 shadow-sm backdrop-blur dark:border-white/10 dark:bg-white/5 dark:text-gray-200 md:col-span-3" data-i18n-description>
    {description}
  </div>
</div>
