---
import { translations, type Language } from "../i18n/translations";
import { DEFAULT_LANGUAGE } from "../i18n/utils";

const currentYear = new Date().getFullYear();
const lang: Language = DEFAULT_LANGUAGE;
const t = translations[lang];
---

<footer
  class="opacity-80 m-4 min-[375px]:pl-4 md:pl-0 mt-16 w-full mx-auto container lg:max-w-4xl md:max-w-2xl mb-10 flex justify-center"
>
  <div
    class="rounded-lg w-full max-w-screen-xl mx-auto md:flex md:items-center md:justify-between py-4"
  >
    <span class="text-sm sm:text-center text-zinc-800/90 dark:text-zinc-200/90"
      >Â© {currentYear}
      <a href="https://midu.dev/" class="hover:underline">Samuel Vargas</a>. <span data-i18n="footer.copyright">{t.footer.copyright}</span>
    </span>
    <ul
      class="flex flex-wrap items-center mt-3 text-sm font-medium dark:text-white/90 sm:mt-0"
    >
      <li>
        <a href="/#about" class="hover:underline me-4 md:me-6" data-i18n="footer.about">{t.footer.about}</a>
      </li>
      <li>
        <a id="contacto" href="mailto:sjvc0595@gmail.com" class="hover:underline" data-i18n="footer.contact"
          >{t.footer.contact}</a
        >
      </li>
    </ul>
<script>
	import { translations } from "../i18n/translations";
	
	function getLanguage() {
		if (typeof window === "undefined") return "en";
		const stored = localStorage.getItem("language");
		return stored === "en" || stored === "es" ? stored : "en";
	}
	
	function getNestedValue(obj: any, path: string): string {
		return path.split(".").reduce((current, key) => current?.[key], obj) || "";
	}
	
	function updateFooterTranslations() {
		const lang = getLanguage();
		const t = translations[lang as keyof typeof translations];
		
		document.querySelectorAll("[data-i18n]").forEach((element) => {
			const key = element.getAttribute("data-i18n");
			if (key) {
				const value = getNestedValue(t, key);
				if (value) {
					element.textContent = value;
				}
			}
		});
	}
	
	document.addEventListener("DOMContentLoaded", updateFooterTranslations);
	document.addEventListener("astro:page-load", updateFooterTranslations);
	document.addEventListener("languagechange", updateFooterTranslations);
</script>
  </div>
</footer>