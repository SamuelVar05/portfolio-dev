---
import ToggleThemeButton from "./ThemeToggle.astro";
import LanguageToggle from "./LanguageToggle.astro";
import { translations } from "../i18n/translations";
import { getLanguage } from "../i18n/utils";

const lang = getLanguage();
const t = translations[lang];
const navItems = [
    { name: t.nav.home, href: "#top", label: "home" },
    { name: t.nav.projects, href: "#projects", label: "projects" },
    { name: t.nav.about, href: "#about", label: "about" },
];
---

<header
    class="fixed top-0 z-10 flex items-center justify-center w-full mx-auto mt-2 gap-x-10 lg:gap-x-20 py-2"
>
    <nav class="flex flex-row gap-x-5 lg:gap-x-20 opacity-80 items-center justify-center rounded-full px-5 py-2">
        <!-- Loop through navItems -->
        <!-- Each item has a name, href, and label -->
        <!-- The label is used to highlight the current page -->
        <!-- The href is used to navigate to the page -->
        <!-- The name is used to display the name of the page -->
        {navItems.map((item, index) => (
            <a href={item.href} data-i18n-nav={index === 0 ? "home" : index === 1 ? "projects" : "about"}>
                {item.name}
            </a>
        ))}
        <LanguageToggle />
        <ToggleThemeButton />
    </nav>
</header>

<script>
    document.addEventListener("astro:page-load", () => {
        const sections = document.querySelectorAll("section");
        const navItems = document.querySelectorAll("header nav a");

        const callback = (entries: any[]) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    navItems.forEach((item) => {
                        if (
                            item.getAttribute("aria-label") == entry.target.id
                        ) {
                            item.classList.add("text-blue-500");
                        } else {
                            item.classList.remove("text-blue-500");
                        }
                    });
                }
            });
        };

        const observer = new IntersectionObserver(callback, {
            root: null,
            rootMargin: "0px",
            threshold: 0.3,
        });

        sections.forEach((section) => {
            observer.observe(section);
        });

        // Cleanup function
        document.onvisibilitychange = () => {
            if (document.visibilityState === "hidden") {
                observer.disconnect();
            } else {
                sections.forEach((section) => {
                    observer.observe(section);
                });
            }
        };
    });
</script>
<script is:inline>
    // Update navigation translations
    (function() {
        const translations = {
            en: {
                nav: {
                    home: "Home",
                    projects: "Projects",
                    about: "About me"
                }
            },
            es: {
                nav: {
                    home: "Inicio",
                    projects: "Proyectos",
                    about: "Acerca de mÃ­"
                }
            }
        };
        
        function getLanguage() {
            const stored = localStorage.getItem("language");
            return stored === "en" || stored === "es" ? stored : "en";
        }
        
        function updateNavTranslations() {
            const lang = getLanguage();
            const t = translations[lang];
            
            document.querySelectorAll("[data-i18n-nav]").forEach((link) => {
                const key = link.getAttribute("data-i18n-nav");
                if (key === "home") {
                    link.textContent = t.nav.home;
                } else if (key === "projects") {
                    link.textContent = t.nav.projects;
                } else if (key === "about") {
                    link.textContent = t.nav.about;
                }
            });
        }
        
        document.addEventListener("DOMContentLoaded", updateNavTranslations);
        document.addEventListener("astro:page-load", updateNavTranslations);
        document.addEventListener("languagechange", updateNavTranslations);
    })();
</script>

<style>
    nav {
        animation: nav-shadown 1s linear both;
        animation-timeline: scroll();
        animation-range: 0 100px;
    }

    nav {
        @apply dark:bg-gray-800/90 bg-white/50;
    }

    @keyframes nav-shadown {
        0% {
            @apply dark:bg-gray-800/0 bg-white/0;
        }
        to {
            @apply shadow-lg ring-1 backdrop-blur ring-white/10;
        }
    }
</style>
