---
// Obtain the props
const { href, icon: Icon, label } = Astro.props;
---

<a
    href={href}
    class="flex items-center space-x-2 rounded-full border border-white/10 justify-center gap-x-2
    hover:scale-110 hover:bg-white/10 transition px-4 py-2"
    target="_blank"
>
    <Icon class="size-6" />
    <span>{label}</span>
</a>
